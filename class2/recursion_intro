string = str(input("What string do you want to reverse: "))
individial_letters = []

def reverse(string):
    reversed_string = ""
    for letter in string:
        individial_letters.append(letter)
        
    print(individial_letters) 
    length = len(individial_letters)

    for i in range(-1,-length-1,-1):
        reversed_string += individial_letters[i]
        print(i)
    return reversed_string

final_string = reverse(string)

print(final_string)

